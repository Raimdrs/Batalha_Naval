    <GridPane fx:id="playerGrid" gridLinesVisible="true" layoutX="50" layoutY="50">
        <!-- Conteúdo dinâmico será carregado pelo Controller -->
    </GridPane>
    <GridPane fx:id="computerGrid" gridLinesVisible="true" layoutX="500" layoutY="50">
        <!-- Conteúdo dinâmico será carregado pelo Controller -->
    </GridPane>
    <Button fx:id="corveta" layoutX="183.0" layoutY="419.0" onAction="#handleCorveta" prefHeight="30.0" prefWidth="69.0" text="Corveta" />
    <Button fx:id="submarino" layoutX="274.0" layoutY="419.0" onAction="#handleSubmarino" prefHeight="30.0" prefWidth="90.0" text="Submarino" />
   <Button fx:id="fragata" layoutX="392.0" layoutY="419.0" onAction="#handleFragata" prefHeight="30.0" prefWidth="120.0" text="Fragata" />
   <Button fx:id="destroyer" layoutX="540.0" layoutY="419.0" onAction="#handleDestroyer" prefHeight="30.0" prefWidth="150.0" text="Destroyer" />
